{
  "name": "jim-cli",
  "version": "0.2.0",
  "type": "module",
  "description": "scaffold for managing template and initializing project",
  "main": "bin/jim.mjs",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --ext .js,.mjs --fix",
    "format": "prettier . --write --ignore-unknown",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "lint-staged": {
    "!*.{js,mjs}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,mjs}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "bin": {
    "jim-cli": "bin/jim.mjs"
  },
  "files": [
    "bin",
    "lib",
    "template.json"
  ],
  "keywords": [
    "cli",
    "scaffold",
    "prompts",
    "commander"
  ],
  "author": "Jim-Elijah",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jim-Elijah/jim-cli.git"
  },
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "chalk": "5.4.1",
    "commander": "14.0.0",
    "download-git-repo": "3.0.0",
    "easy-table": "^1.2.0",
    "log-symbols": "7.0.0",
    "ora": "8.1.1",
    "semver": "^7.7.2",
    "validate-npm-package-name": "^6.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "8.57",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2"
  }
}
